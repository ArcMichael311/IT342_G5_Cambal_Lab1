<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark"
    android:padding="20dp">

    <!-- White Card Container -->
    <RelativeLayout
        android:id="@+id/authCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/auth_card_background"
        android:elevation="10dp"
        android:padding="40dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Register"
            android:textColor="@color/primary"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="30dp" />

        <!-- Error Message -->
        <TextView
            android:id="@+id/tvError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitle"
            android:background="@drawable/error_background"
            android:padding="12dp"
            android:textColor="@color/error_text"
            android:textSize="14sp"
            android:visibility="gone" />

        <!-- Username Label -->
        <TextView
            android:id="@+id/tvUsernameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvError"
            android:layout_marginTop="20dp"
            android:text="Username"
            android:textColor="@color/label_text"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Username Input -->
        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvUsernameLabel"
            android:layout_marginTop="8dp"
            android:background="@drawable/input_background"
            android:hint="Enter your username"
            android:inputType="text"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/hint_text"
            android:textSize="14sp" />

        <!-- Email Label -->
        <TextView
            android:id="@+id/tvEmailLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etUsername"
            android:layout_marginTop="20dp"
            android:text="Email"
            android:textColor="@color/label_text"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Email Input -->
        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvEmailLabel"
            android:layout_marginTop="8dp"
            android:background="@drawable/input_background"
            android:hint="Enter your email"
            android:inputType="textEmailAddress"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/hint_text"
            android:textSize="14sp" />

        <!-- Password Label -->
        <TextView
            android:id="@+id/tvPasswordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etEmail"
            android:layout_marginTop="20dp"
            android:text="Password"
            android:textColor="@color/label_text"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Password Input -->
        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvPasswordLabel"
            android:layout_marginTop="8dp"
            android:background="@drawable/input_background"
            android:hint="Enter your password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/hint_text"
            android:textSize="14sp" />

        <!-- Confirm Password Label -->
        <TextView
            android:id="@+id/tvConfirmPasswordLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etPassword"
            android:layout_marginTop="20dp"
            android:text="Confirm Password"
            android:textColor="@color/label_text"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Confirm Password Input -->
        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvConfirmPasswordLabel"
            android:layout_marginTop="8dp"
            android:background="@drawable/input_background"
            android:hint="Confirm your password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:textColor="@color/black"
            android:textColorHint="@color/hint_text"
            android:textSize="14sp" />

        <!-- Register Button -->
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/etConfirmPassword"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_primary"
            android:elevation="4dp"
            android:padding="12dp"
            android:text="Register"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Login Link -->
        <TextView
            android:id="@+id/tvLoginLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnRegister"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textColor="@color/secondary_text"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tvLoginLinkClickable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnRegister"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Already have an account? Login here"
            android:textColor="@color/secondary_text"
            android:textSize="14sp" />

    </RelativeLayout>

</RelativeLayout>
